upstream <%= @resource.name %> {
  server <%= node.ipaddress %>:<%= @application_port %>;
}

server {
  listen 80;
  server_name <%= @resource.name %>;

  location /static {
    alias /home/vagrant/ganeti_webmgr/current/static;
  }

  location / {
    proxy_set_header Host $host:<%= @application_port %>;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass http://<%= @resource.name %>;
  }
}
